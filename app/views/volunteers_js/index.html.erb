<div ng-controller="VolunteersListCtrl">
  <fieldset class="filter">
    <legend>Filter Volunteers</legend>
    <form novalidate>
        <label>Name</label>
        <input type="text" ng-model="criteria.name">
        <label>Company</label>
        <input type="text" ng-model="criteria.company">
        <label>Email</label>
        <input type="text" ng-model="criteria.email">


      <div data-toggle="collapse" data-target="#skills-collapse">
        <label>Skills</label>
      </div>

      <div class="collapse" id="skills-collapse">
        <ul>
          <li ng-repeat="skill in criteria.skills">
            <input type="checkbox" ng-model="skill.checked">
            {{skill.name}}
          </li>
        </ul>
      </div>
      <div data-toggle="collapse" data-target="#orgs_interested_in-collapse">
        <label>Organizations Interested In</label>
      </div>

      <div class="collapse" id="orgs_interested_in-collapse">
        <ul>
          <li ng-repeat="org in criteria.orgs_interested_in">
            <input type="checkbox" ng-model="org.checked">
            {{org.name}}
          </li>
        </ul>
      </div>

      <div data-toggle="collapse" data-target="#causes_interested_in-collapse">
        <label>Causes Interested In</label>
      </div>

      <div class="collapse" id="causes_interested_in-collapse">
        <ul>
          <li ng-repeat="cause in criteria.causes_interested_in">
            <input type="checkbox" ng-model="cause.checked">
            {{cause.name}}
          </li>
        </ul>
      </div>

      <div data-toggle="collapse" data-target="#languages_interested_in-collapse">
        <label>Languages Interested In</label>
      </div>

      <div class="collapse" id="languages_interested_in-collapse">
        <ul>
          <li ng-repeat="language in criteria.languages_interested_in">
            <input type="checkbox" ng-model="language.checked">
            {{language.name}}
          </li>
        </ul>
      </div>

      <div data-toggle="collapse" data-target="#languages_interested_in-collapse">
        <label>Time To Commit</label>
      </div>


      <li ng-repeat="time in criteria.time_to_commit">
        <input type="radio" ng-model="time_to_commit.one" value="true" />
        {{time.name}}
      </li>

      <button ng-click="filter()" class="btn">Filter</button>
    </form>
  </fieldset>

  <div>
    <ul style="clear: both;">
      <li ng-repeat="volunteer in volunteers" class="profile">
        <a href="#"><img src="./assets/profile_placeholder.png"/></a>
        <div style="padding-left: 50px; padding-top: 10px; float:left; text-align:left;">
            <h4 style="text-align: left;">{{volunteer.name}}</h4>
            <a href="http://www.linkedin.com">{{volunteer.name}}'s LinkedIn Profile</a>
            <p>Email: {{volunteer.email}}</p>
            <p>Company: {{volunteer.company}}</p>
            <p>Interested In: {{volunteer.orgs_interested_in.to_sentence}}</p>
        </div>
      </li>
    </ul>
  </div>
</div>